#!/bin/sh
# preinst script for wasta-core
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    install|upgrade)
        # Disable interaction on configuration file modifications.  Force
        #   to use "confnew" which means install package maintainer's version

        # Later, wasta tweaks can reset anything needing adjusted

        # Needed here instead of just installed by install so that will be
        #   in place BEFORE next user dist-upgrade

        #DEBIAN_FRONT=$(grep "DEBIAN_FRONTEND" /etc/environment || true;)
        #echo "Debian frontend: $DEBIAN_FRONT"
        #if [ "$DEBIAN_FRONT" = "" ];
        #then
        #    echo
        #    echo "*** Setting DEBIAN_FRONTEND=noninteractive"
        #    echo
        #    sed -i -e '$a DEBIAN_FRONTEND=noninteractive' /etc/environment
        #fi

        # set dpkg to force-confnew
        #   (doing here instead of as part of debian/install to make sure
        #    in place before an eventual dist-upgrade)
        echo 'force-confnew' > \
            /etc/dpkg/dpkg.cfg.d/10-force-confnew-wasta-postinst

        # Ensure debconf set to noninteractive
        dpkg-reconfigure debconf --frontend=noninteractive
    ;;

    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
